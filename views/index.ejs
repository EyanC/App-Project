    <title>CyberSecurity</title>
</head>
<body>
    <h1>Cyber index</h1>
    <a class="new" href="/new">New</a>
    <form action="/cyber/new">
        <!-- <button type="submit" name="button">Add new threat</button> -->
    </form>
        <table class="table table-striped">
            <% for (let i = 0; i < data.length; i++) { %>
            
                <tr>
                  <td><h3>Threat</h3><%=data[i].threat%></td>
                  <td> <a href="/<%= data[i]._id%>/edit ">EDIT</a></td>
            
                  <td> <h3>Impact</h3><%=data[i].impact%></td>
            
                  <td> <h3>Mitigation</h3><%=data[i].mitigation%></td>

            
                  <td> <form action="/<%=data[i]._id; %>?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE"/>
                </form></td>
                </tr>
                <% } %>
        </table>
    </form>
</body>
</html>



   